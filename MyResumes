import { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import {
  AlertDialog,
  AlertDialogAction,
  AlertDialogCancel,
  AlertDialogContent,
  AlertDialogDescription,
  AlertDialogFooter,
  AlertDialogHeader,
  AlertDialogTitle,
} from "@/components/ui/alert-dialog";
import { 
  Plus, 
  FileText, 
  Trash2, 
  Edit, 
  Calendar,
  Target,
  Sparkles,
  Loader2
} from "lucide-react";
import { format } from "date-fns";
import { motion } from "framer-motion";
import { toast } from "sonner";

export default function MyResumes() {
  const [deleteId, setDeleteId] = useState(null);
  const queryClient = useQueryClient();

  const { data: resumes = [], isLoading } = useQuery({
    queryKey: ['resumes'],
    queryFn: () => base44.entities.Resume.list("-created_date"),
  });

  const deleteMutation = useMutation({
    mutationFn: async (id) => {
      return await base44.entities.Resume.delete(id);
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['resumes'] });
      toast.success("Resume deleted");
      setDeleteId(null);
    },
  });

  const getTemplateColor = (template) => {
    switch (template) {
      case "modern": return "bg-indigo-100 text-indigo-700";
      case "classic": return "bg-amber-100 text-amber-700";
      case "minimal": return "bg-slate-100 text-slate-700";
      default: return "bg-slate-100 text-slate-700";
    }
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 via-indigo-50/30 to-slate-50">
      <div className="max-w-6xl mx-auto px-4 py-12">
        {/* Header */}
        <div className="text-center mb-12">
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            className="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-br from-indigo-600 to-purple-600 mb-6 shadow-lg shadow-indigo-200"
          >
            <FileText className="w-10 h-10 text-white" />
          </motion.div>
          <h1 className="text-4xl font-bold text-slate-900 mb-3">My Resumes</h1>
          <p className="text-slate-600 max-w-md mx-auto">
            Manage your ATS-optimized resumes and create new ones tailored to your target positions.
          </p>
        </div>

        {/* Create New Button */}
        <div className="mb-8 flex justify-center">
          <Link to={createPageUrl("ResumeBuilder")}>
            <Button
              size="lg"
              className="bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 shadow-lg shadow-indigo-200 text-lg px-8"
            >
              <Plus className="w-5 h-5 mr-2" />
              Create New Resume
            </Button>
          </Link>
        </div>

        {/* Resumes Grid */}
        {isLoading ? (
          <div className="flex items-center justify-center py-20">
            <Loader2 className="w-8 h-8 animate-spin text-indigo-600" />
          </div>
        ) : resumes.length === 0 ? (
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            className="text-center py-20"
          >
            <div className="w-24 h-24 rounded-full bg-slate-100 flex items-center justify-center mx-auto mb-6">
              <FileText className="w-12 h-12 text-slate-400" />
            </div>
            <h3 className="text-xl font-semibold text-slate-900 mb-2">No resumes yet</h3>
            <p className="text-slate-500 mb-6">Create your first ATS-optimized resume to get started</p>
            <Link to={createPageUrl("ResumeBuilder")}>
              <Button className="bg-indigo-600 hover:bg-indigo-700">
                <Plus className="w-4 h-4 mr-2" />
                Create Resume
              </Button>
            </Link>
          </motion.div>
        ) : (
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {resumes.map((resume, index) => (
              <motion.div
                key={resume.id}
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ delay: index * 0.1 }}
              >
                <Card className="group hover:shadow-xl transition-all duration-300 border-slate-200 overflow-hidden">
                  <div className="h-2 bg-gradient-to-r from-indigo-600 to-purple-600" />
                  <CardHeader className="pb-3">
                    <div className="flex items-start justify-between">
                      <div className="flex items-center gap-3">
                        <div className="w-12 h-12 rounded-xl bg-indigo-100 flex items-center justify-center">
                          <FileText className="w-6 h-6 text-indigo-600" />
                        </div>
                        <div>
                          <CardTitle className="text-lg">
                            {resume.title || "Untitled Resume"}
                          </CardTitle>
                          <p className="text-sm text-slate-500">
                            {resume.personal_info?.full_name || "No name set"}
                          </p>
                        </div>
                      </div>
                    </div>
                  </CardHeader>
                  <CardContent className="pt-0">
                    <div className="space-y-3">
                      {/* Template Badge */}
                      <Badge className={getTemplateColor(resume.template)} variant="secondary">
                        {resume.template || "modern"} template
                      </Badge>

                      {/* Target Job */}
                      {resume.target_job && (
                        <div className="flex items-center gap-2 text-sm text-slate-600">
                          <Target className="w-4 h-4 text-indigo-500" />
                          <span>{resume.target_job}</span>
                        </div>
                      )}

                      {/* Stats */}
                      <div className="flex items-center gap-4 text-xs text-slate-500">
                        <span>{(resume.experiences || []).length} experiences</span>
                        <span>•</span>
                        <span>{(resume.skills || []).reduce((acc, cat) => acc + cat.items.length, 0)} skills</span>
                      </div>

                      {/* Keywords */}
                      {(resume.target_keywords || []).length > 0 && (
                        <div className="flex flex-wrap gap-1">
                          {resume.target_keywords.slice(0, 3).map((keyword, i) => (
                            <Badge key={i} variant="outline" className="text-xs">
                              {keyword}
                            </Badge>
                          ))}
                          {resume.target_keywords.length > 3 && (
                            <Badge variant="outline" className="text-xs">
                              +{resume.target_keywords.length - 3}
                            </Badge>
                          )}
                        </div>
                      )}

                      {/* Created Date */}
                      <div className="flex items-center gap-2 text-xs text-slate-400 pt-2 border-t border-slate-100">
                        <Calendar className="w-3 h-3" />
                        {format(new Date(resume.created_date), "MMM d, yyyy")}
                      </div>

                      {/* Actions */}
                      <div className="flex items-center gap-2 pt-2">
                        <Link to={createPageUrl("ResumeBuilder") + `?id=${resume.id}`} className="flex-1">
                          <Button variant="outline" className="w-full" size="sm">
                            <Edit className="w-4 h-4 mr-2" />
                            Edit
                          </Button>
                        </Link>
                        <Button
                          variant="ghost"
                          size="sm"
                          onClick={() => setDeleteId(resume.id)}
                          className="text-slate-400 hover:text-red-500"
                        >
                          <Trash2 className="w-4 h-4" />
                        </Button>
                      </div>
                    </div>
                  </CardContent>
                </Card>
              </motion.div>
            ))}
          </div>
        )}

        {/* AI Tips Card */}
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.3 }}
          className="mt-12"
        >
          <Card className="bg-gradient-to-br from-indigo-600 to-purple-700 text-white border-0">
            <CardContent className="p-8">
              <div className="flex items-start gap-6">
                <div className="w-14 h-14 rounded-2xl bg-white/20 flex items-center justify-center shrink-0">
                  <Sparkles className="w-7 h-7" />
                </div>
                <div>
                  <h3 className="text-xl font-bold mb-2">AI-Powered Resume Tips</h3>
                  <ul className="space-y-2 text-indigo-100">
                    <li className="flex items-start gap-2">
                      <span className="text-indigo-300">•</span>
                      Use action verbs to start your achievement bullets
                    </li>
                    <li className="flex items-start gap-2">
                      <span className="text-indigo-300">•</span>
                      Quantify your achievements with numbers and metrics
                    </li>
                    <li className="flex items-start gap-2">
                      <span className="text-indigo-300">•</span>
                      Include keywords from the job description for ATS optimization
                    </li>
                    <li className="flex items-start gap-2">
                      <span className="text-indigo-300">•</span>
                      Keep your resume to 1-2 pages for most positions
                    </li>
                  </ul>
                </div>
              </div>
            </CardContent>
          </Card>
        </motion.div>
      </div>

      {/* Delete Dialog */}
      <AlertDialog open={!!deleteId} onOpenChange={() => setDeleteId(null)}>
        <AlertDialogContent>
          <AlertDialogHeader>
            <AlertDialogTitle>Delete Resume?</AlertDialogTitle>
            <AlertDialogDescription>
              This action cannot be undone. The resume will be permanently deleted.
            </AlertDialogDescription>
          </AlertDialogHeader>
          <AlertDialogFooter>
            <AlertDialogCancel>Cancel</AlertDialogCancel>
            <AlertDialogAction
              onClick={() => deleteMutation.mutate(deleteId)}
              className="bg-red-600 hover:bg-red-700"
            >
              {deleteMutation.isPending ? (
                <Loader2 className="w-4 h-4 animate-spin" />
              ) : (
                "Delete"
              )}
            </AlertDialogAction>
          </AlertDialogFooter>
        </AlertDialogContent>
      </AlertDialog>
    </div>
  );
}
